<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>InitMart</servlet-name>
        <servlet-class>com.nhnacademy.web.InitMart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InitMart</servlet-name>
        <url-pattern>/init</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Foodstable</servlet-name>
        <servlet-class>com.nhnacademy.web.FoodStand</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Foodstable</servlet-name>
        <url-pattern>/foods</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Cart</servlet-name>
        <servlet-class>com.nhnacademy.web.Cart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>onion</param-name>
        <param-value>2,1000</param-value>
    </context-param>
    <context-param>
        <param-name>egg</param-name>
        <param-value>5,2000</param-value>
    </context-param>
    <context-param>
        <param-name>greenOnion</param-name>
        <param-value>10,500</param-value>
    </context-param>
    <context-param>
        <param-name>apple</param-name>
        <param-value>20,2000</param-value>
    </context-param>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>